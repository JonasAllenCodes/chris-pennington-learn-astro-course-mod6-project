---
// layouts
import BaseLayout from "@/layouts/BaseLayout.astro";

// components
import PostCard from "../../components/ui/PostCard.astro";

// Astro tools
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

// assets
import katieImage from "@/assets/avatar.jpg";
import Heading from "@/components/ui/Heading.astro";

// data
const allPosts = await getCollection("posts", ({ data }) => !data.isDraft);
---

<BaseLayout title="Blog">
    <section aria-label="Blog Posts">
        <div class="blog-wrapper">
            <div class="columns">
                <Image
                    src={katieImage}
                    alt="Katie Haus"
                    class="avatar"
                    width={140}
                    height={140}
                />

                <div class="rows">
                    <div class="columns">
                        <Heading tagName="h1" size="h2">My Writings</Heading>
                        <!-- PAGE PLACEHOLDER -->
                    </div>
                    <p>I like to write about productivity, web development, design, and working with clients. Get a sense of what itâ€™s like to work with me and understand my process.</p>
                </div>
            </div>

            <div class="grid-wrapper">
                {allPosts.map(p => <PostCard post={p} />)}
            </div>
        </div>
    </section>
</BaseLayout>